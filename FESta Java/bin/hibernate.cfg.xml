        <!-- JDBC Database connection settings -->
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://database-1.cttt6jzksrlr.us-east-2.rds.amazonaws.com:3306/controle_academico?useSSL=false&amp;serverTimezone=UTC</property>
