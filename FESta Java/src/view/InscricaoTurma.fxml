<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox minHeight="415.0" minWidth="500.0" prefHeight="548.0" prefWidth="697.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.InscricaoDisciplinaController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="42.0" prefWidth="503.0" text="Inscrição em Turma">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label text="Selecione a Disciplina" />
      <ComboBox fx:id="comboBoxDisciplina" disable="true" onAction="#SelecionarDisciplina" prefHeight="25.0" prefWidth="691.0" />
      <HBox prefHeight="102.0" prefWidth="677.0">
         <children>
            <Button fx:id="btDisciplinasCurso" mnemonicParsing="false" text="Disciplinas do meu Curso" />
         </children>
      </HBox>
      <Label text="Selecione a turma">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <ComboBox fx:id="selecTurmaComboBox" disable="true" onAction="#onSelecaoTurma" prefHeight="25.0" prefWidth="684.0" />
      <HBox alignment="CENTER" prefHeight="107.0" prefWidth="677.0">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
         <children>
            <Button fx:id="removeTurmaButton" disable="true" mnemonicParsing="false" onAction="#removeTurmaDaList" prefHeight="34.0" prefWidth="100.0" text="remover">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="adicionaTurmaButton" disable="true" mnemonicParsing="false" onAction="#adicionaTurmaNaLista" prefHeight="36.0" prefWidth="100.0" text="adicionar">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="DetalhesTurmaButton" disable="true" mnemonicParsing="false" prefHeight="36.0" prefWidth="100.0" text="detalhes" visible="false" />
         </children>
      </HBox>
      <ListView fx:id="turmasSelecionadasListView" prefHeight="302.0" prefWidth="677.0" />
      <HBox alignment="CENTER" prefHeight="105.0" prefWidth="677.0">
         <children>
            <Button fx:id="cancelarBt" mnemonicParsing="false" onAction="#cancelaInscricoes" prefHeight="34.0" prefWidth="100.0" text="Cancelar">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="concluirBt" mnemonicParsing="false" onAction="#concluiInscricoes" prefHeight="36.0" prefWidth="100.0" text="Concluir" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets left="10.0" right="10.0" />
   </padding>
</VBox>
