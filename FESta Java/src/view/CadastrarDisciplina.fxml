<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="510.0" prefWidth="710.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CadastrarDisciplinaController">
    <children>
      <VBox alignment="TOP_CENTER" layoutX="12.0" layoutY="13.0" prefHeight="364.0" prefWidth="686.0" spacing="20.0">
         <children>
            <Label prefHeight="32.0" text="Cadastro de Disciplina">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox fillWidth="false" prefHeight="145.0" prefWidth="326.0" spacing="15.0">
                     <children>
                        <TextField fx:id="txNome" prefHeight="25.0" prefWidth="300.0" promptText="Nome da Disciplina" />
                        <TextField fx:id="txCodigoDisciplina" onKeyReleased="#txCodDisciplinaKeyReleased" prefHeight="25.0" prefWidth="300.0" promptText="Código da Disciplina (AAA999)" />
                        <ComboBox fx:id="comboBoxDepartamento" prefHeight="25.0" prefWidth="300.0" promptText="Selecionar o Departamento" />
                        <ComboBox fx:id="comboBoxCreditos" prefHeight="25.0" prefWidth="300.0" promptText="Selecionar o Número de Créditos" />
                     </children>
                  </VBox>
                  <VBox prefHeight="145.0" prefWidth="359.0">
                     <children>
                        <Label text="Selecionar as Disciplinas Pré-requisitos" textAlignment="CENTER" />
                        <ListView fx:id="listViewPrerequisito" prefHeight="128.0" prefWidth="346.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <FlowPane prefHeight="200.0" prefWidth="200.0" vgap="5.0">
               <children>
                  <HBox prefHeight="25.0" prefWidth="295.0" spacing="10.0">
                     <children>
                        <TextField fx:id="txPesquisar" prefHeight="25.0" prefWidth="210.0" promptText="Pesquisar (Código ou Nome)" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                        <Button fx:id="btCadastrar" mnemonicParsing="false" prefWidth="70.0" text="Cadastrar" />
                        <Button fx:id="btRemover" mnemonicParsing="false" prefWidth="70.0" text="Remover" />
                        <Button fx:id="btAlterar" mnemonicParsing="false" prefWidth="70.0" text="Alterar" />
                        <Button fx:id="btCancelar" mnemonicParsing="false" prefWidth="70.0" text="Cancelar" />
                        <Button fx:id="btConfirmar" mnemonicParsing="false" prefWidth="70.0" text="Confirmar" />
                     </children>
                  </HBox>
                  <TableView fx:id="tableView" prefHeight="237.0" prefWidth="684.0">
                    <columns>
                      <TableColumn fx:id="columnId" prefWidth="75.0" text="ID" />
                      <TableColumn fx:id="columnCodigo" prefWidth="84.0" text="Código" />
                        <TableColumn fx:id="columnCreditos" prefWidth="76.0" text="Créditos" />
                        <TableColumn fx:id="columnNome" prefWidth="196.0" text="Nome" />
                        <TableColumn fx:id="columnDepartamento" prefWidth="252.0" text="Departamento" />
                    </columns>
                  </TableView>
               </children>
            </FlowPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
