<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CadastrarDisciplinaController">
    <children>
      <VBox layoutX="100.0" layoutY="36.0" spacing="20.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Cadastro de Disciplina">
                     <font>
                        <Font size="22.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="16.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <TextField fx:id="txNome" prefHeight="25.0" prefWidth="300.0" promptText="Digite o Nome da Disciplina" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <TextField fx:id="txCodigoDisciplina" prefHeight="25.0" prefWidth="300.0" promptText="Digite o código da Disciplina" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="187.0" spacing="30.0">
               <children>
                  <ComboBox fx:id="comboBoxDepartamento" prefHeight="25.0" prefWidth="300.0" promptText="Selecionar o Departamento" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="98.0" spacing="30.0">
               <children>
                  <ComboBox fx:id="comboBoxCreditos" prefHeight="25.0" prefWidth="300.0" promptText="Selecionar o Número de Créditos" />
               </children>
            </HBox>
            <VBox spacing="6.0">
               <children>
                  <HBox alignment="BOTTOM_CENTER" spacing="30.0">
                     <children>
                        <Label text="Selecionar as Disciplinas Pré-requisitos" textAlignment="CENTER">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Label>
                        <Button fx:id="btAtualizar" mnemonicParsing="false" text="Atualizar" />
                     </children>
                  </HBox>
                  <ListView fx:id="listViewPrerequisito" prefHeight="105.0" prefWidth="300.0" />
               </children>
            </VBox>
            <HBox alignment="CENTER" spacing="150.0">
               <children>
                  <Button fx:id="btCancelar" mnemonicParsing="false" text="Voltar" />
                  <Button fx:id="btCadastrar" mnemonicParsing="false" text="Enviar" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
