<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="464.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CadastrarTurmaController">
    <children>
      <VBox alignment="TOP_CENTER" layoutX="12.0" layoutY="5.0" prefHeight="450.0" prefWidth="977.0" spacing="15.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Cadastro de Turma">
                     <font>
                        <Font size="22.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <FlowPane hgap="15.0" vgap="15.0">
               <children>
                  <ComboBox fx:id="comboBoxDept" disable="true" onAction="#SelecionarDepartamento" prefHeight="25.0" prefWidth="315.0" promptText="Selecionar Departamento" />
                  <ComboBox fx:id="comboBoxDisciplina" disable="true" onAction="#SelecionarDisciplina" prefHeight="25.0" prefWidth="315.0" promptText="Selecionar Disciplina" />
                  <ComboBox fx:id="comboBoxProfessor" disable="true" prefHeight="25.0" prefWidth="150.0" promptText="Selecionar Professor" />
                  <ComboBox fx:id="comboBoxPredio" disable="true" onAction="#selecionarPredio" prefHeight="25.0" prefWidth="150.0" promptText="Selecionar Prédio" />
                  <ComboBox fx:id="comboBoxSala" disable="true" prefHeight="25.0" prefWidth="150.0" promptText="Selecionar Sala" />
                  <ComboBox fx:id="comboBoxDias" disable="true" layoutX="10.0" layoutY="90.0" prefHeight="25.0" prefWidth="150.0" promptText="Selecionar Dias" />
                  <ComboBox fx:id="comboBoxHorarios" disable="true" layoutX="175.0" layoutY="50.0" prefHeight="25.0" prefWidth="150.0" promptText="Selecionar Horários" />
                  <TextField fx:id="txMaxAluno" disable="true" prefHeight="25.0" prefWidth="150.0" promptText="Número Máximo de Alunos">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="txAno" disable="true" prefHeight="25.0" prefWidth="150.0" promptText="Ano" />
                  <HBox alignment="CENTER" prefWidth="150.0" spacing="10.0">
                     <children>
                        <Label prefHeight="17.0" prefWidth="63.0" text="Semestre" />
                        <RadioButton fx:id="radioBt1" disable="true" mnemonicParsing="false" selected="true" text="1º">
                           <toggleGroup>
                              <ToggleGroup fx:id="grupoSemestre" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="radioBt2" disable="true" mnemonicParsing="false" text="2º" toggleGroup="$grupoSemestre" />
                     </children>
                  </HBox>
               </children>
            </FlowPane>
            <FlowPane hgap="15.0" prefHeight="334.0" prefWidth="810.0" vgap="5.0">
               <children>
                  <HBox alignment="BOTTOM_LEFT" spacing="15.0">
                     <children>
                        <Label alignment="BASELINE_LEFT" text="Turmas Cadastradas">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txPesquisar" prefHeight="25.0" prefWidth="228.0" promptText="Pesquisar (Disciplina, Professor ou Sala)">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="567.0" spacing="15.0">
                     <children>
                        <Button fx:id="btCadastrar" mnemonicParsing="false" prefWidth="70.0" text="Cadastrar" />
                        <Button fx:id="btAlterar" layoutX="299.0" layoutY="15.0" mnemonicParsing="false" prefWidth="70.0" text="Alterar" />
                        <Button fx:id="btRemover" layoutX="408.0" layoutY="15.0" mnemonicParsing="false" prefWidth="70.0" text="Remover" />
                        <Button fx:id="btCancelar" disable="true" layoutX="230.0" layoutY="10.0" mnemonicParsing="false" prefWidth="70.0" text="Cancelar" />
                        <Button fx:id="btConfirmar" disable="true" layoutX="257.0" layoutY="10.0" mnemonicParsing="false" prefWidth="70.0" text="Confirmar" />
                     </children>
                  </HBox>
                  <TableView fx:id="tableView" prefHeight="289.0" prefWidth="977.0" tableMenuButtonVisible="true">
                     <columns>
                        <TableColumn fx:id="columnId" prefWidth="40.0" text="ID" />
                        <TableColumn fx:id="columnDisciplina" prefWidth="171.0" text="Disciplina" />
                        <TableColumn fx:id="columnProfessor" prefWidth="162.0" text="Professor" />
                        <TableColumn fx:id="columnSala" prefWidth="143.0" text="Sala" />
                        <TableColumn fx:id="columnAno" prefWidth="124.0" text="Ano" />
                        <TableColumn fx:id="columnSemestre" prefWidth="75.0" text="Semestre" />
                        <TableColumn fx:id="columnDias" prefWidth="75.0" text="Dias" />
                        <TableColumn fx:id="columnHorarios" prefWidth="75.0" text="Horário" />
                        <TableColumn fx:id="columnMaxAlunos" prefWidth="75.0" text="N. Máximo de Alunos" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </FlowPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
