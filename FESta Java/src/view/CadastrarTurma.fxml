<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CadastrarTurmaController">
    <children>
      <VBox layoutX="100.0" layoutY="28.0" spacing="20.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Cadastrar Turma">
                     <font>
                        <Font size="22.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="16.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <ComboBox fx:id="comboBoxCurso" onAction="#SelecionarCurso" prefHeight="25.0" prefWidth="300.0" promptText="Selecionar Curso" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <ComboBox fx:id="comboBoxDisciplina" disable="true" onAction="#SelecionarDisciplina" prefHeight="25.0" prefWidth="300.0" promptText="Selecionar Disciplina" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <ComboBox fx:id="comboBoxProfessor" disable="true" prefHeight="25.0" prefWidth="300.0" promptText="Selecionar Professor" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <ComboBox fx:id="comboBoxPredio" onAction="#selecionarPredio" prefHeight="25.0" prefWidth="300.0" promptText="Selecionar Prédio" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <ComboBox fx:id="comboBoxSala" disable="true" prefHeight="25.0" prefWidth="300.0" promptText="Selecionar Sala" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <TextField fx:id="txMaxAluno" prefHeight="25.0" prefWidth="300.0" promptText="Digite o Número Máximo de Alunos..." />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <TextField fx:id="txAno" prefHeight="25.0" prefWidth="300.0" promptText="Digite o Ano..." />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="25.0">
               <children>
                  <Label text="Semestre" />
                  <RadioButton fx:id="radioBt1" mnemonicParsing="false" selected="true" text="1º">
                     <toggleGroup>
                        <ToggleGroup fx:id="grupoSemestre" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="radioBt2" mnemonicParsing="false" text="2º" toggleGroup="$grupoSemestre" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="150.0">
               <children>
                  <Button fx:id="btCancelar" mnemonicParsing="false" text="Voltar" />
                  <Button fx:id="btCadastrar" mnemonicParsing="false" text="Enviar" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
