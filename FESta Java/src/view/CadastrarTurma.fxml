<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import controller.LimitedTextField?>

<AnchorPane id="AnchorPane" prefHeight="510.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CadastrarTurmaController">
    <children>
      <VBox alignment="TOP_CENTER" layoutX="18.0" layoutY="14.0" prefHeight="432.0" prefWidth="815.0" spacing="20.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Cadastro de Turma">
                     <font>
                        <Font size="22.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="16.0" />
               </padding>
            </HBox>
            <FlowPane hgap="15.0" prefHeight="299.0" prefWidth="675.0" vgap="15.0">
               <children>
                  <ComboBox fx:id="comboBoxCurso" onAction="#SelecionarCurso" prefHeight="25.0" prefWidth="315.0" promptText="Selecionar Curso" />
                  <ComboBox fx:id="comboBoxDisciplina" disable="true" onAction="#SelecionarDisciplina" prefHeight="25.0" prefWidth="315.0" promptText="Selecionar Disciplina" />
                  <ComboBox fx:id="comboBoxProfessor" disable="true" prefHeight="25.0" prefWidth="150.0" promptText="Selecionar Professor" />
                  <ComboBox fx:id="comboBoxPredio" onAction="#selecionarPredio" prefHeight="25.0" prefWidth="150.0" promptText="Selecionar Prédio" />
                  <ComboBox fx:id="comboBoxSala" disable="true" prefHeight="25.0" prefWidth="150.0" promptText="Selecionar Sala" />
                  <LimitedTextField fx:id="txMaxAluno" prefHeight="25.0" prefWidth="150.0" promptText="Número Máximo de Alunos">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </LimitedTextField>
                  <LimitedTextField fx:id="txAno" prefHeight="25.0" prefWidth="150.0" promptText="Ano" />
                  <HBox alignment="CENTER" prefWidth="150.0" spacing="10.0">
                     <children>
                        <Label prefHeight="17.0" prefWidth="63.0" text="Semestre" />
                        <RadioButton fx:id="radioBt1" mnemonicParsing="false" selected="true" text="1º">
                           <toggleGroup>
                              <ToggleGroup fx:id="grupoSemestre" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="radioBt2" mnemonicParsing="false" text="2º" toggleGroup="$grupoSemestre" />
                     </children>
                  </HBox>
               </children>
            </FlowPane>
            <FlowPane hgap="15.0" prefHeight="334.0" prefWidth="810.0" vgap="5.0">
               <children>
                  <HBox alignment="BOTTOM_LEFT" prefWidth="480.0">
                     <children>
                        <Label alignment="BASELINE_LEFT" text="Turmas Cadastradas">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="315.0" spacing="15.0">
                     <children>
                        <Button fx:id="btRemover" layoutX="408.0" layoutY="15.0" mnemonicParsing="false" prefWidth="95.0" text="Remover" />
                        <Button fx:id="btAlterar" layoutX="299.0" layoutY="15.0" mnemonicParsing="false" prefWidth="95.0" text="Alterar" />
                        <Button fx:id="btCadastrar" mnemonicParsing="false" prefWidth="95.0" text="Cadastrar" />
                     </children>
                  </HBox>
                  <TableView fx:id="tableView" prefHeight="261.0" prefWidth="810.0" tableMenuButtonVisible="true">
                     <columns>
                        <TableColumn fx:id="columnId" prefWidth="40.0" text="ID" />
                        <TableColumn fx:id="columnDisciplina" prefWidth="171.0" text="Disciplina" />
                        <TableColumn fx:id="columnProfessor" prefWidth="162.0" text="Professor" />
                        <TableColumn fx:id="columnSala" prefWidth="143.0" text="Sala" />
                        <TableColumn fx:id="columnAno" prefWidth="124.0" text="Ano" />
                        <TableColumn fx:id="columnSemestre" prefWidth="75.0" text="Semestre" />
                        <TableColumn fx:id="columnMaxAlunos" prefWidth="75.0" text="N. Máximo de Alunos" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </FlowPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
