<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="420.0" prefWidth="710.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CadastrarSalaController">
    <children>
      <VBox alignment="TOP_CENTER" layoutX="12.0" layoutY="9.0" prefHeight="400.0" prefWidth="686.0" spacing="20.0">
         <children>
            <Label prefHeight="32.0" text="Cadastro de Sala">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <FlowPane alignment="CENTER" columnHalignment="CENTER" hgap="15.0" prefHeight="25.0" prefWidth="759.0">
               <children>
                  <TextField fx:id="txCodigoSala" onKeyReleased="#txCodSalaKeyReleased" prefHeight="25.0" prefWidth="210.0" promptText="Código da Sala (A9999)" />
                  <TextField fx:id="txCapacidade" prefHeight="25.0" prefWidth="223.0" promptText="Capacidade de Pessoas (0-999)" />
                  <ComboBox fx:id="comboBoxPredio" prefHeight="25.0" prefWidth="223.0" promptText="Selecione o Prédio" />
               </children>
            </FlowPane>
            <FlowPane prefHeight="200.0" prefWidth="200.0" vgap="5.0">
               <children>
                  <HBox prefHeight="25.0" prefWidth="295.0" spacing="10.0">
                     <children>
                        <TextField fx:id="txPesquisar" prefHeight="25.0" prefWidth="210.0" promptText="Pesquisar (Código ou Nome)" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                        <Button fx:id="btCadastrar" mnemonicParsing="false" prefWidth="70.0" text="Cadastrar" />
                        <Button fx:id="btRemover" mnemonicParsing="false" prefWidth="70.0" text="Remover" />
                        <Button fx:id="btAlterar" mnemonicParsing="false" prefWidth="70.0" text="Alterar" />
                        <Button fx:id="btCancelar" mnemonicParsing="false" prefWidth="70.0" text="Cancelar" />
                        <Button fx:id="btConfirmar" mnemonicParsing="false" prefWidth="70.0" text="Confirmar" />
                     </children>
                  </HBox>
                  <TableView fx:id="tableView" prefHeight="276.0" prefWidth="686.0">
                    <columns>
                      <TableColumn fx:id="columnId" prefWidth="62.0" text="ID" />
                      <TableColumn fx:id="columnCodigo" prefWidth="104.0" text="Código" />
                        <TableColumn fx:id="columnCapacidade" prefWidth="140.0" text="Capacidade" />
                        <TableColumn fx:id="columnPredio" prefWidth="134.0" text="Prédio" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </FlowPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
