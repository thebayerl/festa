<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CadastrarSalaController">
    <children>
      <VBox layoutX="150.0" layoutY="74.0" spacing="20.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Cadastro de Salas">
                     <font>
                        <Font size="22.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="16.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <TextField fx:id="txCodigoSala" prefHeight="25.0" prefWidth="300.0" promptText="Digite o Código da Sala..." />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <TextField fx:id="txCapacidade" prefHeight="25.0" prefWidth="300.0" promptText="Digite a Capacidade da Sala..." />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="98.0" spacing="30.0">
               <children>
                  <ComboBox fx:id="comboBoxPredio" editable="true" prefWidth="300.0" promptText="Selecionar Prédio" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="150.0">
               <children>
                  <Button fx:id="btCancelar" mnemonicParsing="false" text="Voltar" />
                  <Button fx:id="btCadastrar" mnemonicParsing="false" text="Enviar" />
               </children>
               <padding>
                  <Insets top="24.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
