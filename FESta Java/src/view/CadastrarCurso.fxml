<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="420.0" prefWidth="710.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CadastrarCursoController">
    <children>
      <VBox alignment="TOP_CENTER" layoutX="12.0" layoutY="10.0" prefHeight="400.0" prefWidth="686.0" spacing="20.0">
         <children>
            <Label text="Cadastro de Curso">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <FlowPane alignment="CENTER" columnHalignment="CENTER" hgap="15.0" prefHeight="25.0" prefWidth="759.0">
               <children>
                  <TextField fx:id="txCodigoCurso" accessibleHelp="cukcvukcvk" accessibleText="sdthsth" onKeyReleased="#txCodCursoKeyReleased" prefHeight="25.0" prefWidth="210.0" promptText="Código do Curso (AAA99)" />
                  <TextField fx:id="txNome" prefHeight="25.0" prefWidth="223.0" promptText="Nome do Curso" />
                  <ComboBox fx:id="comboBoxDepartamento" prefHeight="25.0" prefWidth="223.0" promptText="Selecione o Departamento" />
               </children>
            </FlowPane>
            <FlowPane prefHeight="200.0" prefWidth="200.0" vgap="5.0">
               <children>
                  <HBox prefHeight="25.0" prefWidth="295.0" spacing="10.0">
                     <children>
                        <TextField fx:id="txPesquisar" prefHeight="25.0" prefWidth="210.0" promptText="Pesquisar (Código ou Nome)" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                        <Button fx:id="btCadastrar" mnemonicParsing="false" prefWidth="70.0" text="Cadastrar" />
                        <Button fx:id="btRemover" mnemonicParsing="false" prefWidth="70.0" text="Remover" />
                        <Button fx:id="btAlterar" mnemonicParsing="false" prefWidth="70.0" text="Alterar" />
                        <Button fx:id="btCancelar" mnemonicParsing="false" prefWidth="70.0" text="Cancelar" />
                        <Button fx:id="btConfirmar" mnemonicParsing="false" prefWidth="70.0" text="Confirmar" />
                     </children>
                  </HBox>
                  <TableView fx:id="tableView" prefHeight="264.0" prefWidth="686.0">
                    <columns>
                      <TableColumn fx:id="columnId" prefWidth="62.0" text="ID" />
                      <TableColumn fx:id="columnCodigo" prefWidth="104.0" text="Código" />
                        <TableColumn fx:id="columnNome" prefWidth="140.0" text="Nome" />
                        <TableColumn fx:id="columnDepartamento" prefWidth="134.0" text="Departamento" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </FlowPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
