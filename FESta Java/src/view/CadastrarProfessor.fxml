<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CadastrarProfessorController">
    <children>
      <VBox layoutX="100.0" layoutY="21.0" spacing="20.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Cadastro de Professor">
                     <font>
                        <Font size="22.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="16.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="78.0" spacing="30.0">
               <children>
                  <TextField fx:id="txUserName" prefHeight="25.0" prefWidth="300.0" promptText="Digite seu Username ..." />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="30.0">
               <children>
                  <PasswordField fx:id="psSenha" prefHeight="25.0" prefWidth="300.0" promptText="Digite sua Senha ..." />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="302.0" spacing="30.0">
               <children>
                  <PasswordField fx:id="psSenhaConf" prefHeight="25.0" prefWidth="300.0" promptText="Confirme sua Senha ..." />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <TextField fx:id="txNome" prefHeight="25.0" prefWidth="300.0" promptText="Digite o Nome do Professor..." />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="98.0" spacing="30.0">
               <children>
                  <TextField fx:id="txFormacao" prefHeight="25.0" prefWidth="300.0" promptText="Digite o Nivel de Formação..." />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="322.0" spacing="30.0">
               <children>
                  <TextField fx:id="txRG" prefHeight="25.0" prefWidth="300.0" promptText="Digite seu RG ..." />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="342.0" spacing="30.0">
               <children>
                  <TextField fx:id="txCPF" prefHeight="25.0" prefWidth="300.0" promptText="Digite seu CPF ..." />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="362.0" spacing="30.0">
               <children>
                  <ComboBox fx:id="comboBoxCurso" prefHeight="25.0" prefWidth="300.0" promptText="Selecionar o Curso" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="150.0">
               <children>
                  <Button fx:id="btCancelar" mnemonicParsing="false" text="Voltar" />
                  <Button fx:id="btCadastrar" mnemonicParsing="false" text="Enviar" />
               </children>
               <padding>
                  <Insets top="6.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
